@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Telek Terület</h1>
    <div class="row">
       <div class="col-md-6">
			<div class="card">
                <div class="card-header">
                    <h4>Bemeneti adatok</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
						<label for="matrixinput" class="form-label">Mátrix bemenet n*n formátumban, soronként szóközzel elválasztva</label>
                        <textarea id="matrixinput" class="form-control" rows="10" placeholder="pl: &#10;1 2 3&#10;1 2 3&#10;1 2 3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="epsziloninput">Epszilon érték: </label>
				        <input type="number" id="epsziloninput" class="form-control" value="1"/>
                    </div>
                    <button id="calculatebutton" class="btn btn-primary">Küldés</button>
                </div>
            </div>
       </div>
       <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Eredmény</h4>
                </div>
                <div class="card-body">
                    <div id="resultarea" class="mb-3">
                        <p>A számítás eredményei itt jelennek meg: </p>
                    </div>
                    <div id="matrixvisualization" class="matrix-visualization">

                    </div>
                </div>
            </div>
       </div>
    </div>
</div>
@section Scripts{
<script src="~/js/matrix.js"></script>
<script src="~/js/TestCases.js"></script>
}
